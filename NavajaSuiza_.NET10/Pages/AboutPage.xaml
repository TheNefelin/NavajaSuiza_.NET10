<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:NavajaSuiza_.NET10.Extensions"
             x:Class="NavajaSuiza_.NET10.Pages.AboutPage"
             Title="{extensions:Translate AboutText}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Border Padding="10" >
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                
                <Grid ColumnDefinitions="*, Auto" RowDefinitions="auto, auto">
                    <Label 
                        Grid.Row="0" Grid.Column="0"
                        Text="{extensions:Translate ThemeText}" 
                        FontSize="18" 
                        FontAttributes="Bold"/>

                    <Label 
                        Grid.Row="1" Grid.Column="0"
                        Text="{extensions:Translate ThemeContentText}" 
                        VerticalOptions="Center"
                        FontSize="12" />

                    <Switch 
                        Grid.Row="1" Grid.Column="1"
                        IsToggled="{Binding IsDarkMode, Mode=TwoWay}"
                        ThumbColor="red" />
                </Grid>
            </Border>

            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>