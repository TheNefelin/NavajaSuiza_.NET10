<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:NavajaSuiza_.NET10.Extensions"
             x:Class="NavajaSuiza_.NET10.Pages.AboutPage"
             Title="{extensions:Translate AboutText}">

    <ScrollView>
        <Grid 
            RowDefinitions="*,auto" 
            RowSpacing="20"
            Padding="20">

            <Border 
                Grid.Row="0"
                Padding="10" 
                HeightRequest="100" VerticalOptions="Start">
                
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                
                <Grid ColumnDefinitions="*, Auto" RowDefinitions="auto, auto">
                    <Label 
                        Grid.Row="0" Grid.Column="0"
                        Text="{extensions:Translate ThemeText}" 
                        FontSize="18" 
                        FontAttributes="Bold"/>

                    <Label 
                        Text="{extensions:Translate ThemeContentText}" 
                        Grid.Row="1" Grid.Column="0"
                        VerticalOptions="Center"
                        FontSize="12" />

                    <Switch 
                        Grid.Row="1" Grid.Column="1"
                        IsToggled="{Binding IsDarkMode, Mode=TwoWay}"
                        ThumbColor="red" />
                </Grid>
            </Border>

            <VerticalStackLayout Grid.Row="1" Spacing="10">
                <Image Source="logo.svg" HeightRequest="100"/>
                <Label Text="Beta: v1.0.0" HorizontalOptions="Center"/>
            </VerticalStackLayout>

        </Grid>
    </ScrollView>
    
</ContentPage>